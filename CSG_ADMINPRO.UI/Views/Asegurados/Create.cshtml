@model CSG_ADMINPRO.DOMAIN.Entities.Asegurado
@{
    ViewData["Title"] = "Asegurados / Nuevo";
}

<div class="container py-4">
    <div class="d-flex justify-content-between">
        <h4><i class="bi bi-star-fill"></i> @ViewData["Title"]?.ToString()</h4>
        <a asp-action="Index" class="btn btn-info"> <i class="bi bi-arrow-return-left"></i> Regresar</a>
    </div>

    <div class="row mt-4">
        <div class="col-md-6">
            <div class="card border-0 shadow-lg">
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group">
                            <label asp-for="ClienteId" class="control-label">CLIENTE</label>
                            <select asp-for="ClienteId" class="form-control" asp-items="@(new SelectList(ViewBag.Clientes, "Id", "NombreCliente"))">
                                <option>-- SELECCIONAR --</option>
                            </select>
                            <span asp-validation-for="ClienteId" class="text-danger"></span>
                        </div>

                        <div class="form-group mt-3">
                            <label asp-for="SeguroId" class="control-label">SEGURO</label>
                            <select asp-for="SeguroId" class="form-control" asp-items="@(new SelectList(ViewBag.Seguros, "Id", "NombreSeguro"))">
                                <option>-- SELECCIONAR --</option>
                            </select>
                            <span asp-validation-for="SeguroId" class="text-danger"></span>
                        </div>

                        <div class="form-group mt-4">
                            <button type="submit" class="btn btn-primary"><i class="fas fa-lock"></i> Guardar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}